<label for="preg" class="rem">Pregunta:</label>
<input type="text" id="preg" name="quiz[pregunta]" value="<%= quiz.pregunta %>"/><p>
<label for="resp" class="rem">Respuesta:</label>
<input type="text" id="resp" name="quiz[respuesta]" value="<%= quiz.respuesta %>"/><p>
<label for="tematico" class="rem">Tematico:</label>
<select name="quiz[tematico]">
  <option value="Otro" <% if(quiz.tematico === 'Otro') {%> selected <%} %>>Otro</option>
  <option value="Humanidades" <% if(quiz.tematico === 'Humanidades') {%> selected <%} %>>Humanidades</option>
  <option value="Ocio" <% if(quiz.tematico === 'Ocio') {%> selected <%} %>>Ocio</option>
  <option value="Ciencia" <% if(quiz.tematico === 'Ciencia') {%> selected <%} %>>Ciencia</option>
  <option value="Tecnologia" <% if(quiz.tematico === 'Tecnologia') {%> selected <%} %>>Tecnologia</option>
</select>
<a href="/quizes"><button type="button">Cancelar</button></a>
